<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <preConditions>
        <runningAs username="srs"/>
    </preConditions>

    <changeSet id="changelog-1.1" author="srs">

    <createTable tableName="FOOD_STORE">
        <column name="FOOD_STORE_ID" type="int">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="STORE_NAME" type="varchar(200)">
            <constraints nullable="false"/>
        </column>
        <column name="RATE" type="int">
            <constraints nullable="true"/>
        </column>
        <column name="OWNER_NAME" type="varchar(200)">
            <constraints nullable="true"/>
        </column>
        <column name="FOOD_TYPE_ID" type="int">
            <constraints nullable="false"/>
        </column>
        <column name="CREATED_USER_ID" type="varchar(200)"/>
        <column name="CREATED_AT" type="timestamp">
            <constraints nullable="false"/>
        </column>
        <column name="UPDATED_USER_ID" type="varchar(200)"/>
        <column name="UPDATED_AT" type="timestamp">
            <constraints nullable="false"/>
        </column>
    </createTable>

    <createTable tableName="FOOD_TYPE">
        <column name="FOOD_TYPE_ID" type="int">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="FOOD_TYPE_NAME" type="varchar(200)">
            <constraints nullable="false"/>
        </column>
        <column name="FOOD_ORDER" type="int">
            <constraints nullable="true"/>
        </column>
        <column name="CREATED_USER_ID" type="varchar(200)"/>
        <column name="CREATED_AT" type="timestamp">
            <constraints nullable="false"/>
        </column>
        <column name="UPDATED_USER_ID" type="varchar(200)"/>
        <column name="UPDATED_AT" type="timestamp">
            <constraints nullable="false"/>
        </column>
    </createTable>
    </changeSet>

</databaseChangeLog>
